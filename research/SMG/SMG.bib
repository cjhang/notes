@article{Ivison2019,
  title = {Hyperluminous Starburst Gives up Its Secrets},
  author = {Ivison, R. J. and Page, M. J. and Cirasuolo, M. and Harrison, C. M. and Mainieri, V. and Arumugam, V. and Dudzevi{\v c}i{\=u}t{\.e}, U.},
  year = {2019},
