  eprint = {2102.11936},
  eprinttype = {arxiv},
  file = {/Users/jchen/Documents/zotero/storage/5S5ACN2R/Symeonidis and Page - 2021 - AGN and star formation across cosmic time.pdf;/Users/jchen/Documents/zotero/storage/JDIWSBNS/2102.html},
  journal = {arXiv:2102.11936 [astro-ph]},
  keywords = {Astrophysics - Astrophysics of Galaxies},
  primaryclass = {astro-ph}
}

